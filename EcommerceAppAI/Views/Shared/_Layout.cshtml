<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - EcommerceAppAI</title>

    <!-- Material Design 3 CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Custom Chat Styles -->
    <link href="~/css/chat-material.css" rel="stylesheet" asp-append-version="true"/>
</head>
<body>
<!-- Simple Material Design 3 Header -->
<header style="background: var(--md-sys-color-surface); border-bottom: 1px solid var(--md-sys-color-outline-variant); padding: 16px 24px; position: sticky; top: 0; z-index: 100;">
    <div style="display: flex; align-items: center; justify-content: space-between; max-width: 1200px; margin: 0 auto;">
        <h1 style="margin: 0; font-size: 1.375rem; font-weight: 500; color: var(--md-sys-color-on-surface);">
            EcommerceAppAI
        </h1>
        <nav style="display: flex; gap: 12px;">
            <a href="@Url.Action("Index", "Home")" style="display: inline-flex; align-items: center; padding: 8px 16px; border-radius: 20px; background: var(--md-sys-color-primary-container); color: var(--md-sys-color-on-primary-container); text-decoration: none; font-weight: 500;">
                <span class="material-icons" style="margin-right: 8px; font-size: 20px;">chat</span>
                AI Chat
            </a>
            <a href="@Url.Action("Index", "Qdrant")" target="_blank" style="display: inline-flex; align-items: center; padding: 8px 16px; border-radius: 20px; background: var(--md-sys-color-secondary-container); color: var(--md-sys-color-on-secondary-container); text-decoration: none; font-weight: 500;">
                <span class="material-icons" style="margin-right: 8px; font-size: 20px;">storage</span>
                Vector DB
            </a>
        </nav>
    </div>
</header>

<main role="main" style="padding: 24px; max-width: 1200px; margin: 0 auto;">
    @RenderBody()
</main>

<footer style="margin-top: 48px; padding: 24px; text-align: center; color: var(--md-sys-color-on-surface-variant); border-top: 1px solid var(--md-sys-color-outline-variant);">
    <div>
        &copy; 2025 - EcommerceAppAI - Material Design 3
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>